<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Report name</th>
      <th>Server name</th>
      <th>Server port</th>
      <th>Login</th>
      <th>Password</th>
      <th>Organization</th>
      <th>Report format</th>
      <th>Report output file name</th>
      <th>Path to report</th>
      <th>Report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.report_name %></td>
        <td><%= report.server_name %></td>
        <td><%= report.server_port %></td>
        <td><%= report.login %></td>
        <td><%= report.password %></td>
        <td><%= report.organization_id %></td>
        <td><%= report.report_format %></td>
        <td><%= report.report_output_file_name %></td>
        <td><%= report.path_to_report %></td>
        <td><%= report.report_id %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
